{
  "name": "dragoid",
  "version": "0.40.0",
  "description": "Download and read novels offline",
  "bin": {
    "dragoid": "./bin/dragoid"
  },
  "main": "./bin/dragoid",
  "type": "module",
  "files": [
    "./bin/"
  ],
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 node --experimental-transform-types ./src/dragoid.ts",
    "prebuild": "rm -rf ./bin",
    "build": "pnpm build:client && NODE_NO_WARNINGS=1 node --experimental-transform-types ./build.ts ",
    "build:client": "vite build",
    "postbuild": "cp ./node_modules/wasm-vips/lib/vips-node.mjs ./bin",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .ts",
    "prepare": "husky",
    "pretest": "NODE_NO_WARNINGS=1  node --experimental-transform-types ./tests/fetch-assets.ts",
    "test": "NODE_NO_WARNINGS=1 node --experimental-transform-types --test"
  },
  "keywords": [
    "novel",
    "bot",
    "chapters",
    "download novel",
    "reader novel",
    "epub"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasfernandodev/dragoid.git"
  },
  "author": "lucasfernandodev",
  "license": "ISC",
  "overrides": {
    "clone-deep": "^4.0.1",
    "merge-deep": {
      "clone-deep": "^4.0.1"
    }
  },
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@fastify/view": "^11.1.0",
    "@fastify/vite": "^8.1.3",
    "@tabler/icons-react": "^3.34.1",
    "@types/ejs": "^3.1.5",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "cheerio": "^1.1.0",
    "clone-deep": "^4.0.1",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "epub-gen": "^0.1.0",
    "esbuild": "^0.25.5",
    "fastify": "^5.4.0",
    "html-rewriter-wasm": "^0.4.1",
    "puppeteer-core": "^24.10.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.7.1",
    "typescript": "^5.8.3",
    "wasm-vips": "^0.0.13",
    "yargs": "^18.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/epub-gen": "^0.1.2",
    "@types/node": "^24.0.3",
    "@types/yargs": "^17.0.33",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.6"
  },
  "optionalDependencies": {
    "puppeteer": "^24.10.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "pnpm": {
    "overrides": {
      "rollup": "npm:@rollup/wasm-node"
    }
  }
}