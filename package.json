{
  "name": "dragoid",
  "version": "0.0.2",
  "description": "Make Download of novels and chapters to read offline",
  "main": "./bin/dragoid",
  "type": "module",
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 node --experimental-strip-types ./dragoid.ts",
    "build": "npx esbuild ./dragoid.ts --bundle --platform=node --target=node22.13.1 --outfile=./bin/dragoid --format=esm --banner:js='import { createRequire as topLevelCreateRequire } from \"module\";\n const require = topLevelCreateRequire(import.meta.url);'  --external:tslib",
    "postbuild": "cp -r ./mode/web-preview/client ./bin/"
  },
  "keywords": [
    "novel",
    "bot",
    "chapters"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasfernandodev/dragoid.git"
  },
  "author": "lucasfernandodev",
  "license": "ISC",
  "overrides": {
    "clone-deep": "^4.0.1",
    "merge-deep": {
      "clone-deep": "^4.0.1"
    }
  },
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "@fastify/view": "^10.0.2",
    "@types/axios": "^0.14.4",
    "@types/ejs": "^3.1.5",
    "axios": "^1.8.1",
    "chalk": "^5.4.1",
    "cheerio": "^1.0.0",
    "clone-deep": "^4.0.1",
    "ejs": "^3.1.10",
    "fastify": "^5.2.1",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "sharp": "^0.33.5",
    "typescript": "^5.8.2",
    "yargs": "^17.7.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.7",
    "@types/yargs": "^17.0.33"
  },
  "optionalDependencies": {
    "puppeteer": "^24.4.0",
    "puppeteer-extra": "^3.3.6"
  }
}