{
  "name": "dragoid",
  "version": "0.35.0",
  "description": "Download and read novels offline",
  "bin": {
    "dragoid": "./bin/dragoid"
  },
  "main": "./bin/dragoid",
  "type": "module",
  "files": [
    "./bin/"
  ],
  "scripts": {
    "dev": "NODE_NO_WARNINGS=1 node --experimental-transform-types ./src/dragoid.ts",
    "prebuild": "rm -rf ./bin",
    "build": "NODE_NO_WARNINGS=1 node --experimental-transform-types ./build.ts",
    "postbuild": "cp -r ./src/commands/preview/client ./bin/ && cp ./node_modules/wasm-vips/lib/vips-node.mjs ./bin",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "novel",
    "bot",
    "chapters",
    "download novel",
    "reader novel",
    "epub"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasfernandodev/dragoid.git"
  },
  "author": "lucasfernandodev",
  "license": "ISC",
  "overrides": {
    "clone-deep": "^4.0.1",
    "merge-deep": {
      "clone-deep": "^4.0.1"
    }
  },
  "dependencies": {
    "@fastify/static": "^8.2.0",
    "@fastify/view": "^11.1.0",
    "@types/ejs": "^3.1.5",
    "axios": "^1.10.0",
    "chalk": "^5.4.1",
    "cheerio": "^1.1.0",
    "clone-deep": "^4.0.1",
    "ejs": "^3.1.10",
    "epub-gen": "^0.1.0",
    "esbuild": "^0.25.5",
    "fastify": "^5.4.0",
    "puppeteer-core": "^24.10.2",
    "typescript": "^5.8.3",
    "wasm-vips": "^0.0.11",
    "yargs": "^18.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^22.15.32",
    "@types/yargs": "^17.0.33"
  },
  "optionalDependencies": {
    "puppeteer": "^24.10.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  }
}